{
  "name": "json-to-fixture",
  "version": "1.0.1",
  "description": "Load a set of JSON files from a directory into a fixture object for easy use in tests.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NightWatchman/json-to-fixture.git"
  },
  "keywords": [
    "json",
    "fixture",
    "test",
    "load",
    "files"
  ],
  "author": "Eric Rushing",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NightWatchman/json-to-fixture/issues"
  },
  "homepage": "https://github.com/NightWatchman/json-to-fixture#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.1",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {},
  "jest": {
    "collectCoverage": false,
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0,
      "semi": [
        2,
        "never"
      ]
    }
  }
}
